<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--ConstraintSets-->
    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@id/cardOne">
            <Layout
                android:layout_width="270dp"
                android:layout_height="424dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="0dp" />
            <CustomAttribute
                app:attributeName="radius"
                app:customDimension="24dp"/>
            <CustomAttribute
                app:attributeName="cardElevation"
                app:customDimension="16dp"/>
        </Constraint>


        <Constraint android:id="@id/cardTwo">
            <Layout
                android:layout_width="270dp"
                android:layout_height="424dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <Transform
                android:scaleX="0.9"
                android:scaleY="0.9"/>
        </Constraint>


        <Constraint android:id="@id/btSwipeLeft">
            <Transform
                android:scaleX="1"
                android:scaleY="1"/>
            <CustomAttribute
                app:attributeName="crossfade"
                app:customFloatValue="0"/>
        </Constraint>

        <Constraint android:id="@id/btSwipeRight">
            <Transform
                android:scaleX="1"
                android:scaleY="1" />
            <CustomAttribute
                app:attributeName="crossfade"
                app:customFloatValue="0"/>

        </Constraint>

        <Constraint android:id="@id/btRedraw">
            <Transform
                android:scaleX="1"
                android:scaleY="1"/>

        </Constraint>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/unlike">
        <Constraint android:id="@id/cardOne">
            <Layout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="200dp"
                android:layout_marginBottom="80dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.9"/>
        </Constraint>

        <Constraint android:id="@id/cardTwo">
            <Transform
                android:scaleY="1"
                android:scaleX="1"/>
        </Constraint>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/offScreenUnlike"
        app:deriveConstraintsFrom="@id/unlike">
        <Constraint android:id="@id/cardOne">
            <Layout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="500dp"
                android:layout_marginBottom="80dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.7"/>
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/like">
        <Constraint android:id="@id/cardOne">
            <Layout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="200dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="80dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_percent="0.9"/>
        </Constraint>

        <Constraint android:id="@+id/cardTwo">
            <Transform
                android:scaleX="1"
                android:scaleY="1"/>
        </Constraint>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/offScreenLike"
        app:deriveConstraintsFrom="@id/like">
        <Constraint android:id="@id/cardOne">
            <Layout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="80dp"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintWidth_percent="0.7"/>
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/detail">
        <Constraint android:id="@id/cardOne">
            <Layout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="90dp" />
            <CustomAttribute
                app:attributeName="radius"
                app:customDimension="0dp"/>
            <CustomAttribute
                app:attributeName="cardElevation"
                app:customDimension="0dp"/>
        </Constraint>

        <Constraint android:id="@id/cardTwo">
            <PropertySet android:alpha="0"/>
        </Constraint>

        <Constraint android:id="@id/btSwipeLeft">
            <CustomAttribute
                app:attributeName="crossfade"
                app:customFloatValue="1"/>
        </Constraint>

        <Constraint android:id="@id/btSwipeRight">
            <CustomAttribute
                app:attributeName="crossfade"
                app:customFloatValue="1"/>

        </Constraint>


        <Constraint android:id="@id/btRedraw">
            <Transform
                android:scaleX="0"
                android:scaleY="0"/>

        </Constraint>

    </ConstraintSet>

    <!--Transitions-->
    <Transition android:id="@+id/startToUnlike"
        app:constraintSetEnd="@id/unlike"
        app:constraintSetStart="@id/start">
        <OnSwipe
            app:dragDirection="dragLeft"
            app:onTouchUp="autoComplete"
            app:touchAnchorSide="left"
            app:touchRegionId="@id/cardOne"/>
        <KeyFrameSet>
            <KeyPosition
                app:framePosition="50"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/cardOne"
                app:percentY="0.1"/>
        </KeyFrameSet>
    </Transition>

    <Transition app:autoTransition="animateToEnd"
        app:constraintSetEnd="@+id/offScreenUnlike"
        app:constraintSetStart="@id/unlike"
        app:duration="150"/>

    <Transition android:id="@+id/startToLike"
        app:constraintSetEnd="@+id/like"
        app:constraintSetStart="@+id/start">
        <OnSwipe
            app:dragDirection="dragRight"
            app:onTouchUp="autoComplete"
            app:touchAnchorId="@id/cardOne"
            app:touchAnchorSide="right"
            app:touchRegionId="@id/cardOne"/>
        <KeyFrameSet>
            <KeyPosition
                app:framePosition="50"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/cardOne"
                app:percentY="-0.1"/>
        </KeyFrameSet>
    </Transition>

    <Transition app:autoTransition="animateToEnd"
        app:constraintSetStart="@id/like"
        app:constraintSetEnd="@id/offScreenLike"
        app:duration="150"/>

    <Transition app:autoTransition="animateToEnd"
        app:constraintSetStart="@id/offScreenUnlike"
        app:constraintSetEnd="@id/start"
        app:duration="0"/>

    <Transition app:autoTransition="animateToEnd"
        app:constraintSetStart="@id/offScreenLike"
        app:constraintSetEnd="@id/start"
        app:duration="0"/>

    <Transition android:id="@+id/detailTransition"
        app:constraintSetEnd="@id/detail"
        app:constraintSetStart="@id/start"
        app:duration="500">
        <OnSwipe
            app:dragDirection="dragUp"
            app:onTouchUp="autoComplete"
            app:touchAnchorId="@id/cardOne"
            app:touchAnchorSide="top"
            app:touchRegionId="@id/cardOne"/>
    </Transition>

</MotionScene>