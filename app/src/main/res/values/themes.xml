<resources>
    <!-- Base application theme. -->
    <style name="Theme.Thinder" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorPrimaryVariant">@color/blue_800</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_300</item>
        <item name="colorSecondaryVariant">@color/green_400</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/white</item>
        <item name="colorOnBackground">@color/black</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/grey_700</item>

        <item name="colorError">@color/red_500</item>
        <item name="colorOnError">@color/black</item>

    </style>

    <!-- Fonts -->
